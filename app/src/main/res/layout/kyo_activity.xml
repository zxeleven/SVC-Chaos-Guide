<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="8dp"
    android:background="@color/colorAccent">

    <android.support.v7.widget.CardView
        android:id="@+id/kyoCard"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        app:cardElevation="3dp"
        android:layout_marginTop="8dp"
        app:cardCornerRadius="4dp"
        app:cardPreventCornerOverlap="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/kyoBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/kyo_bg"/>

            <ImageView
                android:id="@+id/kyoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:src="@drawable/kyo_name"/>

            <ImageView
                android:id="@+id/kyoPortrait"
                android:layout_width="105dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:scaleType="centerCrop"
                android:src="@drawable/kyo_small_port"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/bioText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/kyoCard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Bio"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bioText"
        app:cardElevation="3dp"
        app:cardCornerRadius="4dp"
        app:cardPreventCornerOverlap="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:paddingTop="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kyo Kusanagi is the main protagonist in SNK's The King of Fighters video game series. He was first introduced in The King of Fighters '94 as the leader of the Japan team. He is the rival of Iori Yagami."
                android:textSize="20sp"
                android:textColor="@color/primaryTextColor"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>